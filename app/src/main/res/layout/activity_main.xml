            app:layout_constraintTop_toTopOf="@+id/btnQ" />

        <Button
            android:id="@+id/btnR"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
