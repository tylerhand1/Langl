            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="L"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/btnK"
            app:layout_constraintTop_toTopOf="@+id/btnA" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboardRowThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keyboardRowTwo"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Enter"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/keyboardRowThree"
            app:layout_constraintStart_toStartOf="@id/keyboardRowThree"
            app:layout_constraintTop_toTopOf="@+id/keyboardRowThree" />

        <Button
            android:id="@+id/btnZ"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Z"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/btnEnter"
            app:layout_constraintTop_toTopOf="@+id/btnEnter" />

        <Button
            android:id="@+id/btnX"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
