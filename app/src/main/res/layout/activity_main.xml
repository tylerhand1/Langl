            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/btnT"
            app:layout_constraintTop_toTopOf="@+id/btnQ" />

        <Button
            android:id="@+id/btnU"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="U"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/btnY"
            app:layout_constraintTop_toTopOf="@+id/btnQ" />

        <Button
            android:id="@+id/btnI"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="I"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/btnU"
            app:layout_constraintTop_toTopOf="@+id/btnQ" />

        <Button
            android:id="@+id/btnO"
